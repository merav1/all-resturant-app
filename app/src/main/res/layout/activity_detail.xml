<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="10dp"
      android:orientation="vertical">

    <ImageView
        android:id="@+id/imagey"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        app:cardCornerRadius="30dp" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

      <TextView
          android:id="@+id/nameN"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_marginTop="10dp"
          android:singleLine="true"
          android:text="סושי"
          android:textColor="@color/black"
          android:textSize="35dp"
          android:textStyle="bold"/>

      <ImageView
          android:id="@+id/fav_b"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:layout_marginLeft="5dp"
          android:layout_marginTop="10dp"
          android:src="@drawable/favorit_border" />
    </RelativeLayout>

    <TextView
        android:id="@+id/nameD"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/nameN"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris pretium quis erat vitae aliquet."/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

      <TextView
          android:id="@+id/nameP"
          android:layout_width="150dp"
          android:layout_height="40dp"
          android:text="$15,00"
          android:layout_marginLeft="230dp"
          android:layout_marginTop="20dp"
          android:textColor="#FF9800"
          android:textSize="25sp" />

      <TextView
          android:id="@+id/nameT"
          android:layout_width="150dp"
          android:layout_height="50dp"
          android:layout_marginLeft="0dp"
          android:layout_marginTop="15dp"
          android:gravity="center"
          android:padding="8dp"
          android:text="15 דק'"
          android:textColor="#FF9800"
          android:textSize="25sp" />
    </RelativeLayout>
    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/plus_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        app:backGroundColor="@color/transparent"
        app:finalNumber="5"
        app:initialNumber="1"
        app:textColor="#0C0C0C">

    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

    <Button
        android:id="@+id/badd"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/nameP"
        android:backgroundTint="#FF9800"
        android:text="הוסף לסל"
        android:textColor="@color/black"
        android:textSize="25dp"/>

  </LinearLayout>

    <include
        android:id="@+id/include"
        layout="@layout/activity_menu_bar"/>
</androidx.constraintlayout.widget.ConstraintLayout>